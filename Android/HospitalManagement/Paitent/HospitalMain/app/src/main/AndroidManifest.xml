<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hospitalmain">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HospitalMain"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".TermsActivity"
            android:exported="false" />
        <activity
            android:name=".BillDetailActivity"
            android:exported="false" />
        <activity
            android:name=".AppointmentDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".DoctorDetails"
            android:exported="false" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".UserSignUpActivity"
            android:exported="true" />
        <activity
            android:name=".UserSignInActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HospitalMain.NoActionBar" />
    </application>

</manifest>